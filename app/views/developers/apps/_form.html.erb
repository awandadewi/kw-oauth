<% if application.errors.any? %>
  <div class="alert alert-danger" data-alert><p><%= t('doorkeeper.applications.form.error') %></p></div>
<% end %>

<%= content_tag :div, class: "form-group#{' has-danger' if application.errors[:name].present?}" do %>
  <%= f.label :name, class: "form-control-label" %>
  <%= f.text_field :name, class: 'form-control' %>
  <%= doorkeeper_errors_for application, :name %>
<% end %>

<%= content_tag :div, class: "form-group#{' has-danger' if application.errors[:scopes].present?}" do %>
  <%= f.label :scopes, class: "form-control-label" %>
  <%= f.text_field :scopes, class: 'form-control' %>
  <%= doorkeeper_errors_for application, :scopes %>
  <span class="help-block">
    <%= t('doorkeeper.applications.help.scopes') %>
  </span>
<% end %>

<div class="form-group u-mt--40">
  <%= f.submit t('doorkeeper.applications.buttons.submit'), class: "btn btn-primary" %>
  <%= link_to t('doorkeeper.applications.buttons.cancel'), developers_apps_path, :class => "btn btn-default" %>
</div>
